# API Configuration
VITE_API_BASE_URL=https://your-server-domain.vercel.app/api/v1
VITE_API_URL=https://your-server-domain.vercel.app

# Development API (for local development)
# VITE_API_BASE_URL=http://localhost:3000/api/v1
# VITE_API_URL=http://localhost:3000

# App Configuration
VITE_APP_NAME=Smart Farm
VITE_APP_VERSION=1.0.0

# Environment
VITE_NODE_ENV=production

# Features
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_ANALYTICS=true

# Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Map/Location (if using maps)
VITE_MAP_API_KEY=your-map-api-key

# Analytics (if using)
VITE_ANALYTICS_ID=your-analytics-id

# Social Login (if implemented)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id